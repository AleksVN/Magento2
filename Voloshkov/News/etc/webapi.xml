<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/news/save" method="POST">
        <service class="Voloshkov\News\Api\NewsRepositoryInterface" method="save"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
    <route url="/V1/news/get" method="GET">
        <service class="Voloshkov\News\Api\NewsRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/news/delete/:id" method="DELETE">
        <service class="Voloshkov\News\Api\NewsRepositoryInterface" method="deleteById"/>
        <resources>
            <resource ref="self"/>
        </resources>
    </route>
</routes>
